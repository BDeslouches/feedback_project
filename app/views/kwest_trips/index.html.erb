<div class="page-header">
  <h1>
    Kwest trips
    <a href="/kwest_trips/new" class="btn btn-lg btn-success">New Kwest trip</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "kwest_trips_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :trip_name_cont, "Trip name contains" %>
    <%= f.text_field :trip_name_cont, :class => "form-control", :placeholder => "Trip name contains" %>
  </div>

<div class="form-group">
    <%= f.label :short_eq, "Short" %>
    <div>
      <label class="radio-inline">
        <%= f.radio_button :short_eq, "1", checked: ((params[:q] && params[:q][:short_eq]) == "1" ? "checked" : "") %> Yes
      </label>
      <label class="radio-inline">
        <%= f.radio_button :short_eq, "0", checked: ((params[:q] && params[:q][:short_eq]) == "0" ? "checked" : "")%> No
      </label>
      <label class="radio-inline">
        <%= f.radio_button :short_eq, ""%> Either
      </label>
    </div>
  </div>

<div class="form-group">
    <%= f.label :region_name_cont, "Region name contains" %>
    <%= f.text_field :region_name_cont, :class => "form-control", :placeholder => "Region name contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
          <%= f.label :created_at, "SignUp Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='sign_upsgteqcreated_atPicker'>
                  <%= f.text_field :sign_ups_created_at_gteq, :class => "form-control", :placeholder => "SignUp Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='sign_upslteqcreated_atPicker'>
                  <%= f.text_field :sign_ups_created_at_lteq, :class => "form-control", :placeholder => "SignUp Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#sign_upsgteqcreated_atPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sign_upslteqcreated_atPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#sign_upsgteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sign_upslteqcreated_atPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#sign_upslteqcreated_atPicker').on("dp.change", function (e) {
                  $('#sign_upsgteqcreated_atPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/kwest_trips" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#kwest_trips_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Trip name</th>
        <th>Region name</th>
        <th>Short</th>
        <th>Actions</th>
      </tr>

      <% @kwest_trips.each do |kwest_trip| %>
      <tr>
        <td><%= kwest_trip.trip_name %></td>
        <td><%= kwest_trip.region_name %></td>
        <td><%= kwest_trip.short %></td>
        <td>
          <a href="/kwest_trips/<%= kwest_trip.id %>" class="btn btn-primary">Show</a>
          <a href="/kwest_trips/<%= kwest_trip.id %>/edit" class="btn btn-warning">Edit</a>
          <a href="/delete_kwest_trip/<%= kwest_trip.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @kwest_trips, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
