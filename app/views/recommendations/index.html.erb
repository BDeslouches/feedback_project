<div class="page-header">
  <h1>
    Recommendations
    <a href="/recommendations/new" class="btn btn-lg btn-success">New Recommendation</a>
  </h1>
</div><div class="row mb-1">
  <div class="col-md-12">
    <%= search_form_for @q, :class => collapse_search_form, :id => "recommendations_filters" do |f| %>
      <p class="lead">Narrow results:</p>

        <div class="form-group">
    <%= f.label :rec_type_cont, "Rec type contains" %>
    <%= f.text_field :rec_type_cont, :class => "form-control", :placeholder => "Rec type contains" %>
  </div>

<div class="form-group">
    <%= f.label :body_cont, "Body contains" %>
    <%= f.text_field :body_cont, :class => "form-control", :placeholder => "Body contains" %>
  </div>

<div class="form-group">
          <%= f.label :created_at, "Created at" %>
          <div class="row">
            <div class='col-md-6 mb-1'>
              <div class='input-group date' id='created_atgteqPicker'>
                  <%= f.text_field :created_at_gteq, :class => "form-control", :placeholder => "Created at greater than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>

            <div class='col-md-6'>
              <div class='input-group date' id='created_atlteqPicker'>
                  <%= f.text_field :created_at_lteq, :class => "form-control", :placeholder => "Created at less than or equal to" %>
                  <span class="input-group-addon">
                      <span class="glyphicon glyphicon-calendar"></span>
                  </span>
              </div>
            </div>
          </div>
      </div>
      <script type="text/javascript">
          $(function () {
              $('#created_atgteqPicker').datetimepicker({
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atlteqPicker').datetimepicker({
                  useCurrent: false,
                  format: 'YYYY-MM-DD hh:mm:SS'
              });
              $('#created_atgteqPicker').on("dp.change", function (e) {
                  $('#created_atlteqPicker').data("DateTimePicker").minDate(e.date);
              });
              $('#created_atlteqPicker').on("dp.change", function (e) {
                  $('#created_atgteqPicker').data("DateTimePicker").maxDate(e.date);
              });
          });
      </script>

        <div class="form-group">
      <%= f.label :sender_email_cont, "User email contains" %>
      <%= f.text_field :sender_email_cont, :class => "form-control", :placeholder => "User email contains" %>
    </div>

<div class="form-group">
      <%= f.label :trip_trip_name_cont, "KwestTrip trip_name contains" %>
      <%= f.text_field :trip_trip_name_cont, :class => "form-control", :placeholder => "KwestTrip trip_name contains" %>
    </div>

      <%= f.submit :class => "btn btn-primary btn-block mb-1" %>

      <a href="/recommendations" class="btn btn-default btn-block mb-1">Clear filters</a>
    <% end %>
    <a class="btn btn-default btn-block mb-1" data-toggle="collapse" href="#recommendations_filters">
      Show Filters
    </a>
  </div>
</div>

<div class="row">
  <div class="col-md-12">
    <table class="table table-striped table-hover">
      <tr>
        <th>Sender</th>
        <th>Recipient</th>
        <th>Body</th>
        <th>Rec type</th>
        <th>Actions</th>
      </tr>

      <% @recommendations.each do |recommendation| %>
      <tr>
        <td>
          <% if recommendation.sender.present? %>
            <a href="/users/<%= recommendation.sender.id %>">
              <%= recommendation.sender.email %>
            </a>
          <% end %>
        </td>
        <td>
          <% if recommendation.trip.present? %>
            <a href="/kwest_trips/<%= recommendation.trip.id %>">
              <%= recommendation.trip.trip_name %>
            </a>
          <% end %>
        </td>
        <td><%= recommendation.body %></td>
        <td><%= recommendation.rec_type %></td>
        <td>
          <a href="/recommendations/<%= recommendation.id %>" class="btn btn-primary">Show</a>
          
          <% if current_user == recommendation.sender %>
            <a href="/recommendations/<%= recommendation.id %>/edit" class="btn btn-warning">Edit</a>
            <a href="/delete_recommendation/<%= recommendation.id %>" class="btn btn-danger" rel="nofollow">Delete</a>
          <% end %>
        </td>
      </tr>
      <% end %>
    </table>
    <%= paginate @recommendations, theme: 'twitter-bootstrap-4' %>
  </div>
</div>
